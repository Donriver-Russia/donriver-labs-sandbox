<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="info" name="EquifaxTransport" packages="">
    <Appenders>
        <Console name="STDOUT" target="SYSTEM_OUT">
            <PatternLayout pattern="%m%n"/>
        </Console>
        <RollingFile name="ServiceFile" fileName="weather-gateway.log"
                     filePattern="logs/equifax-transport-service-%d{MM-dd-yyyy}-%i.log">
            <PatternLayout>
                <Pattern>%d %p [%t] %m%n</Pattern>
            </PatternLayout>
            <Policies>
                <TimeBasedTriggeringPolicy/>
                <SizeBasedTriggeringPolicy size="10 MB"/>
            </Policies>
        </RollingFile>
    </Appenders>
    <Loggers>
        <Root level="debug">
            <AppenderRef ref="ServiceFile"/>
        </Root>
    </Loggers>
</Configuration>